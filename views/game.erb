<div id="game">
  <%= erb :messages %>
<h1>Welcome to Blackjack</h1>

<% if !session[:player_turn] %>
  <% dealer_total = calculate_total(session[:dealer_hand]) %>
<% else %>
  <% dealer_total = calculate_total(session[:dealer_hand][1..-1]) %>
<% end %>

<p>Dealer total score: <%= dealer_total %> 
<div class="well">  
  <% session[:dealer_hand].each_with_index do |card, i| %>
    <% if session[:player_turn] == true && i == 0 %>
      <%= image_helper "cover" %>     
    <% else %>
      <%= image_helper card %>      
      <% end %>
  <% end %> 
</div>

<%= session[:name] %> holds: Total Score: <%= calculate_total(session[:player_hand]).to_s %> Cash left: <%= session[:cash].to_s %>
<div class="well">  
    <% session[:player_hand].each do |card| %>
      <%= image_helper card %>
    <% end %>   
</div>

<%= erb :show_hit_stay_buttons if @show_hit_or_stay_buttons %>
<%= erb :show_dealer_continue_button if @show_dealer_continue_button %>
<%= erb :show_play_again_button if @show_play_again_button %>

</div>